{% doc %}
  @prompt
    collapsible content, with title for the section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collapsible-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {% if block.settings.show_rounded_corners %}{{ block.settings.border_radius }}px{% else %}0{% endif %};
  }

  .ai-collapsible-title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    text-align: {{ block.settings.title_alignment }};
    {% if block.settings.title_uppercase %}
      text-transform: uppercase;
    {% endif %}
  }

  .ai-collapsible-item-{{ ai_gen_id }} {
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-collapsible-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-collapsible-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: {{ block.settings.item_padding }}px 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    {% if block.settings.heading_uppercase %}
      text-transform: uppercase;
    {% endif %}
  }

  .ai-collapsible-header-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-collapsible-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-left: 16px;
    transition: transform 0.3s ease;
    color: {{ block.settings.icon_color }};
  }

  .ai-collapsible-icon-{{ ai_gen_id }}.active {
    transform: rotate(180deg);
  }

  .ai-collapsible-content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .ai-collapsible-content-{{ ai_gen_id }}.active {
    max-height: 1000px;
  }

  .ai-collapsible-content-inner-{{ ai_gen_id }} {
    padding-bottom: {{ block.settings.item_padding }}px;
    color: {{ block.settings.content_color }};
    font-size: {{ block.settings.content_size }}px;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-collapsible-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<collapsible-content-{{ ai_gen_id }} class="ai-collapsible-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_title != blank %}
    <h2 class="ai-collapsible-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
  {% endif %}

  {% for i in (1..5) %}
    {% liquid
      assign heading_key = 'heading_' | append: i
      assign content_key = 'content_' | append: i
      assign heading = block.settings[heading_key]
      assign content = block.settings[content_key]
    %}

    {% if heading != blank %}
      <div class="ai-collapsible-item-{{ ai_gen_id }}">
        <button
          class="ai-collapsible-header-{{ ai_gen_id }}"
          aria-expanded="false"
          data-collapsible-trigger
        >
          <span>{{ heading }}</span>
          <svg
            class="ai-collapsible-icon-{{ ai_gen_id }}"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </button>
        <div class="ai-collapsible-content-{{ ai_gen_id }}" data-collapsible-content>
          <div class="ai-collapsible-content-inner-{{ ai_gen_id }}">
            {{ content }}
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</collapsible-content-{{ ai_gen_id }}>

<script>
  (function() {
    class CollapsibleContent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.triggers = this.querySelectorAll('[data-collapsible-trigger]');
        this.setupEventListeners();
        
        if (this.triggers.length > 0 && {{ block.settings.open_first_item | json }}) {
          this.openItem(this.triggers[0]);
        }
      }

      setupEventListeners() {
        this.triggers.forEach((trigger) => {
          trigger.addEventListener('click', () => {
            const content = trigger.nextElementSibling;
            const icon = trigger.querySelector('.ai-collapsible-icon-{{ ai_gen_id }}');
            const isOpen = content.classList.contains('active');

            if ({{ block.settings.allow_multiple_open | json }} === false) {
              this.closeAllItems();
            }

            if (isOpen) {
              this.closeItem(trigger);
            } else {
              this.openItem(trigger);
            }
          });
        });
      }

      openItem(trigger) {
        const content = trigger.nextElementSibling;
        const icon = trigger.querySelector('.ai-collapsible-icon-{{ ai_gen_id }}');
        
        content.classList.add('active');
        icon.classList.add('active');
        trigger.setAttribute('aria-expanded', 'true');
      }

      closeItem(trigger) {
        const content = trigger.nextElementSibling;
        const icon = trigger.querySelector('.ai-collapsible-icon-{{ ai_gen_id }}');
        
        content.classList.remove('active');
        icon.classList.remove('active');
        trigger.setAttribute('aria-expanded', 'false');
      }

      closeAllItems() {
        this.triggers.forEach((trigger) => {
          this.closeItem(trigger);
        });
      }
    }

    customElements.define('collapsible-content-{{ ai_gen_id }}', CollapsibleContent{{ ai_gen_id }});
  })();
</script>

